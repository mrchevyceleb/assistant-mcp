{
  "name": "assistant-mcp-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Matt's Remote MCP Server Monorepo",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run build --workspace=client",
    "install:all": "npm install && npm install --workspaces"
  },
  "keywords": ["mcp", "assistant"],
  "author": "Matt Johnston",
  "license": "MIT"
}
